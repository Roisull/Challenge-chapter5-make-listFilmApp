<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragment.DetailFragment">

    <ImageView
        android:id="@+id/ivBackDetailToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"
        />

    <ImageView
        android:id="@+id/ivImageDetail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/ivBackDetailToHome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/grey_hint"
        />

    <TextView
        android:id="@+id/tvTitleDetailContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="20sp"
        android:textColor="@color/purple_500"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivImageDetail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <LinearLayout
        android:id="@+id/llEditDeleteContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleDetailContent"
        >
        <ImageView
            android:id="@+id/ivEditContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_baseline_edit_note_24"/>
        <ImageView
            android:id="@+id/ivDeleteContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/svDescriptionDetailContent"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llEditDeleteContent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:id="@+id/tvDescriptionDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="@color/grey_hint"
            android:text="@string/walaupun_seperti_memiliki_kelainan_mental_elliot_berusaha_melindungi_orang_orang_dengan_caranya_sendiri_satu_waktu_dia_melucuti_pemilik_kafe_yang_ternyata_merupakan_seorang_pedofil_meski_ditawari_sejumlah_uang_untuk_tidak_melaporkan_kepada_polisi_elliot_tidak_memperdulikannya_begitu_juga_saat_dia_mencoba_untuk_membentengi_teman_semasa_kecil_angela_maupun_konselornya_krista_dari_orang_orang_jahat_sebelum_mengkonfrontir_orang_yang_memperhatikan_ia_selalu_mendapat_bukti_konkret_dari_keahliannya_yaitu_hacking_walaupun_seperti_memiliki_kelainan_mental_elliot_berusaha_melindungi_orang_orang_dengan_caranya_sendiri_satu_waktu_dia_melucuti_pemilik_kafe_yang_ternyata_merupakan_seorang_pedofil_meski_ditawari_sejumlah_uang_untuk_tidak_melaporkan_kepada_polisi_elliot_tidak_memperdulikannya_begitu_juga_saat_dia_mencoba_untuk_membentengi_teman_semasa_kecil_angela_maupun_konselornya_krista_dari_orang_orang_jahat_sebelum_mengkonfrontir_orang_yang_memperhatikan_ia_selalu_mendapat_bukti_konkret_dari_keahliannya_yaitu_hacking" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>